<h1>Blog Posts</h1>
<h3><%= link_to 'new post', new_post_path %></h3>
<table>
    <thead>
        <tr>
            <th>title</th>
            <th>body</th>
            <th colspan="3">Action</th> 
        </tr>
    </thead>
    <tbody>
        <% @posts.each do|post| %>
        <tr>    
            <td><%= post.title %></td>
            <td><%= post.body %></td>
            <td><%= link_to 'show', post_path(post) %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Delete', [post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>    
</table>